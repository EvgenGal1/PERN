{
  "version": 2,
  "env": {
    "NODE_ENV": "production"
  },
  "build": {
    "env": {
      "NODE_ENV": "production"
    }
  },
  "builds": [
    {
      "src": "src/index.ts",
      "use": "@vercel/node",
      "config": {
        "includeFiles": ["public/**/*"]
      }
    }
  ],
  "routes": [
    {
      "src": "/(.*)",
      "dest": "src/index.ts"
    },
    {
      "src": "/img/(.*)",
      "dest": "/public/img/$1"
    },
    {
      "src": "/views/(.*)",
      "dest": "/public/views/$1"
    },
    {
      "src": "/swagger",
      "dest": "src/index.ts"
    },
    {
      "src": "/public/(.*)",
      "dest": "/public/$1"
    }
  ]
}
