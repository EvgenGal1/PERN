{
  "compilerOptions": {
    "esModuleInterop": true,
    "noImplicitAny": false,
    "rootDir": "./", // Корневая директория вашего TypeScript проекта
    "outDir": "./dist", // Директория для скомпилированных файлов
    "baseUrl": "./", // Базовый путь для разрешения модулей
    "target": "ES2020",
    "module": "commonjs",
    "strict": true,
    "skipLibCheck": true
  },
  "include": [
    "./**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}