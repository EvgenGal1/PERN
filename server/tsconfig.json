{
  "compilerOptions": {
    "target": "es6", // es6 || ES2020
    "module": "CommonJS", // CommonJS (> Node.js) / ESNext (> ES-модули / TS ) 
    "moduleResolution": "node", // разреш.модул.Node.js
    "strict": true, // строгие проверки типов
    "skipLibCheck": true, // пропуск проверки типов в ф. .d.ts
    "esModuleInterop": true, // использ.вместе модули CommonJS и ES
    "forceConsistentCasingInFileNames": true, // единообразие в именах ф.
    "noImplicitAny": true, // вкл.ошб.неявные типы 
    "baseUrl": "./src", // базовый путь модулей
    "rootDir": "./src", // путь TS проекта
    "outDir": "./dist", // путь скомпилированных ф.
    "resolveJsonModule": true // импорта JSON-ф
  },
  // вкл.в компиляцию
  "include": [
    "src/**/*",
    "ZZZ/error",
  ],
  // откл.из компиляции
  "exclude": [
    "node_modules",
    "**/*.spec.ts",
    "**/ZZZ/*",
    "**/vr*/*",
    "dist"
  ]
}